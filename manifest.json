{
  "manifest_version": 3,
  "name": "SupplyHunter",
  "version": "1.0",
  "description": "Find suppliers faster, smarter. Générateur de recherches avancées pour sourcing",
  "permissions": ["activeTab", "tabs", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon128.png",
      "48": "icons/icon128.png",
      "128": "icons/icon128.png"
    }
  }
}